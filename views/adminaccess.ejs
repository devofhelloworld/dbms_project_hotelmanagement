<%- include('./partials/nav')%>

    <!-- Admin Registration Section -->
    <section class="min-h-screen flex items-center justify-center py-12 px-4">
        <div class="max-w-md w-full mt-20">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-4xl md:text-5xl font-playfair font-bold text-gray-900 mb-2"><%= editing=='true'?'Edit Admin Credentials': 'Admin Registration'%></h1>
                <p class="text-gray-600"><%= editing=='true'?'Update': 'Create'%> your administrator account</p>
            </div>

            <!-- Registration Form -->
            <div class="bg-white rounded-xl shadow-2xl p-8">
              <% if(editing=='true'){ %>
             
                <form action="/editadmin/<%= admindata.admin_id %>" method="POST">
                <% } else{ %>
                  <form action="/addadmin" method="POST">

                <% }  %> 
                    <!-- First Name -->
                    <div class="mb-6">
                        <label for="fname" class="block text-gray-700 font-medium mb-2">First Name</label>
                        <input 
                            type="text" 
                            id="fname" 
                            value="<%=admindata?admindata.fname:''%>"
                            name="fname" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 transition" 
                            placeholder="Enter your first name"
                            autocomplete="given-name">
                    </div>

                    <!-- Last Name -->
                    <div class="mb-6">
                        <label for="lname" class="block text-gray-700 font-medium mb-2">Last Name</label>
                        <input 
                            type="text" 
                            id="lname" 
                            name="lname" 
                            value="<%=admindata?admindata.lname:''%>"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 transition" 
                            placeholder="Enter your last name"
                            autocomplete="family-name">
                    </div>

                    <!-- Email -->
                    <div class="mb-6">
                        <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            value="<%=admindata?admindata.email:''%>"
                            name="email" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 transition" 
                            placeholder="admin@example.com"
                            autocomplete="email">
                    </div>

                   
                    <!-- phone -->
                    <div class="mb-6">
                        <label for="confirm-password" class="block text-gray-700 font-medium mb-2">Phone</label>
                        <input 
                            type="tel" 
                            id="confirm-password" 
                            name="phone" 
                            value="<%=admindata?admindata.phone:''%>"
                            required
                            minlength="8"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 transition" 
                            placeholder="Phone number"
                            autocomplete="new-password">
                    </div>

                     <!-- Password -->
                     <div class="mb-6">
                      <label for="password" class="block text-gray-700 font-medium mb-2"><%=editing=='true'?'New Password':'Password'%></label>
                      <input 
                          type="password" 
                          id="password" 
                          name="password" 
                          required
                          minlength="8"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 transition" 
                          placeholder="Create a strong password"
                          autocomplete="new-password">
                      <p class="text-sm text-gray-500 mt-2">Must be at least 8 characters long</p>
                  </div>

                    <!-- Terms and Conditions -->
                    <div class="mb-6 flex items-start">
                        <input 
                            type="checkbox" 
                            id="terms" 
                            name="terms" 
                            required
                            class="mt-1 mr-3 h-4 w-4 text-amber-800 border-gray-300 rounded focus:ring-amber-800">
                        <label for="terms" class="text-sm text-gray-600">
                            I agree to the <a href="#" class="text-amber-800 hover:underline">Terms of Service</a> and 
                            <a href="#" class="text-amber-800 hover:underline">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        class="w-full bg-amber-800 text-white py-3 rounded-lg hover:bg-amber-900 transition font-medium shadow-lg hover:shadow-xl">
                        <%= editing=='true'?'Update': 'Create'%> Admin Account
                    </button>

                    <!-- Login Link -->
                     <% if(editing!='true'){ %>
                    <div class="text-center mt-6">
                        <p class="text-gray-600">
                            Already have an account? 
                            <a href="/adminlogin" class="text-amber-800 hover:underline font-medium">Sign In</a>
                        </p>
                    </div>
                  <%}%>

                </form>
            </div>

            <!-- Back to Home -->
            <div class="text-center mt-6">
                <a href="/" class="text-gray-600 hover:text-amber-800 transition">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Home
                </a>
            </div>
        </div>
    </section>

    
</body>
</html>
