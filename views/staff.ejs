<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Staff Member - <%=hoteldata.name%> Hotel</title>
    <link rel="stylesheet" href="./output.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .font-playfair {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center">
                    <h1 class="text-3xl font-playfair font-bold text-amber-800"><%=hoteldata.name%></h1>
                    <span class="ml-4 text-gray-600">| HR Management</span>
                </div>
                <a href="/admin#staff" class="text-gray-700 hover:text-amber-800 transition flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Staff Management
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 py-8">
        
        <!-- Header -->
        <div class="mb-8">
            <h2 class="text-3xl font-playfair font-bold text-gray-900 mb-2">Add New Staff Member</h2>
            <p class="text-gray-600">Fill in the details to register a new employee</p>
        </div>

        <!-- Add Staff Form -->
        <div class="bg-white rounded-xl shadow-lg p-8">
            <form id="addStaffForm" method="post" action="/addstaff">
                
                <!-- Personal Information Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        Personal Information
                    </h3>
                    
                    <!-- Profile Photo Upload -->
                    <div class="mb-6 flex items-center">
                        <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mr-6 overflow-hidden">
                            <img id="profilePreview" src="https://ui-avatars.com/api/?name=New+Staff&size=96" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <input type="file" id="profilePhoto" class="hidden" accept="image/*">
                            <label for="profilePhoto" class="px-4 py-2 bg-amber-800 text-white rounded-lg hover:bg-amber-900 transition cursor-pointer inline-block">
                                Upload Photo
                            </label>
                            <p class="text-sm text-gray-500 mt-2">JPG, PNG or GIF (Max 5MB)</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- First Name -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">First Name *</label>
                            <input type="text" name="fname" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter first name" required>
                        </div>

                        <!-- Last Name -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Last Name *</label>
                            <input type="text" name="lname" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter last name" required>
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Email Address *</label>
                            <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="email@example.com" required>
                        </div>

                        <!-- Phone -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Phone Number *</label>
                            <input type="tel" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="+91 xxxxx xxxxx" required>
                        </div>

                        <!-- Date of Birth -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Date of Birth *</label>
                            <input type="date" name="dob" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                        </div>

                        <!-- Gender -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Gender *</label>
                            <select name="gender" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                                <option value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                                <option value="prefered-not-say">Prefer not to say</option>
                            </select>
                        </div>

                        <!-- Aadhaar Number -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Aadhaar Number *</label>
                            <input type="text" name="adhaar" maxlength="12" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="xxxx xxxx xxxx" required>
                        </div>

                        <!-- PAN Number -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">PAN Number</label>
                            <input type="text" name="pan" maxlength="10" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="ABCDE1234F">
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="mt-6">
                        <label class="block text-gray-700 font-medium mb-2">Full Address *</label>
                        <textarea rows="3" name="address" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter complete residential address" required></textarea>
                    </div>
                </div>

                <!-- Employment Details Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Employment Details
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Employee ID -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Employee ID *</label>
                            <input type="text" id="empId" name="emp_id" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200 bg-gray-50" placeholder="Auto-generated" value="<%=value%>" readonly>
                            <p class="text-sm text-gray-500 mt-1">Automatically assigned</p>
                        </div>

                        <!-- Department -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Department *</label>
                            <select id="department" name="department" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                                <option value="">Select Department</option>
                                <option value="Front-desk">Front Desk</option>
                                <option value="Housekeeping">Housekeeping</option>
                                <option value="Food-beverage">Food & Beverage</option>
                                <option value="Kitchen">Kitchen</option>
                                <option value="Maintenance">Maintenance</option>
                                <option value="Security">Security</option>
                                <option value="Spa-wellness">Spa & Wellness</option>
                                <option value="Accounts">Accounts</option>
                                <option value="Human Resources">Human Resources</option>
                                <option value="Management">Management</option>
                            </select>
                        </div>

                        <!-- Position/Designation -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Position/Designation *</label>
                            <input type="text" name="position" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="e.g., Front Desk Manager" required>
                        </div>

                        <!-- Employment Type -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Employment Type *</label>
                            <select name="employmenttype" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                                <option value="">Select Type</option>
                                <option value="full-time">Full Time</option>
                                <option value="part-time">Part Time</option>
                                <option value="contract">Contract</option>
                                <option value="temporary">Temporary</option>
                                <option value="intern">Intern</option>
                            </select>
                        </div>

                        <!-- Joining Date -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Joining Date *</label>
                            <input type="date" name="doj" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                        </div>

                        <!-- Shift Timing -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Shift Timing *</label>
                            <select name="shifts" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                                <option value="">Select Shift</option>
                                <option value="morning">Morning (6 AM - 2 PM)</option>
                                <option value="day">Day (10 AM - 6 PM)</option>
                                <option value="evening">Evening (2 PM - 10 PM)</option>
                                <option value="night">Night (10 PM - 6 AM)</option>
                                <option value="rotational">Rotational</option>
                            </select>
                        </div>

                        <!-- Salary -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Monthly Salary (<%=hoteldata.currency%>) *</label>
                            <input type="number" name="salary" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="25000" required>
                        </div>

                        <!-- Reporting Manager -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Reporting Manager</label>
                            <select name="reporting_manager" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200">
                                <option value="">Select Manager</option>
                                <option value="emp1001">Rahul Sharma - General Manager</option>
                                <option value="emp1002">Neha Verma - Operations Manager</option>
                                <option value="emp1003">Amit Patel - Front Office Manager</option>
                                <option value="emp1004">Priya Singh - Housekeeping Manager</option>
                                <option value="emp1005">Vikram Rao - F&B Manager</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contact Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        Emergency Contact
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Emergency Contact Name -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Contact Name *</label>
                            <input name="em_name" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter contact name" required>
                        </div>

                        <!-- Relationship -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Relationship *</label>
                            <select name="em_rel" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" required>
                                <option value="">Select Relationship</option>
                                <option value="parent">Parent</option>
                                <option value="spouse">Spouse</option>
                                <option value="sibling">Sibling</option>
                                <option value="friend">Friend</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <!-- Emergency Phone -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Phone Number *</label>
                            <input name="em_phone" type="tel" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="+91 xxxxx xxxxx" required>
                        </div>

                        <!-- Alternate Phone -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Alternate Number</label>
                            <input name="em_altphone" type="tel" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="+91 xxxxx xxxxx">
                        </div>
                    </div>
                </div>

                <!-- Bank Details Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                        </svg>
                        Bank Account Details
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Bank Name -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Bank Name *</label>
                            <input name="bank_name" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter bank name" required>
                        </div>

                        <!-- Account Number -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Account Number *</label>
                            <input name="bank_acc" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter account number" required>
                        </div>

                        <!-- IFSC Code -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">IFSC Code *</label>
                            <input name="bank_ifsc" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="ABCD0123456" required>
                        </div>

                        <!-- Branch Name -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Branch Name</label>
                            <input name="bank_branch" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Enter branch name">
                        </div>
                    </div>
                </div>

                <!-- Documents Upload Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Document Uploads
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Aadhaar Card -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Aadhaar Card *</label>
                            <input type="file" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800" accept=".pdf,.jpg,.jpeg,.png" required>
                            <p class="text-xs text-gray-500 mt-1">PDF, JPG or PNG (Max 5MB)</p>
                        </div>

                        <!-- PAN Card -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">PAN Card</label>
                            <input type="file" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800" accept=".pdf,.jpg,.jpeg,.png">
                            <p class="text-xs text-gray-500 mt-1">PDF, JPG or PNG (Max 5MB)</p>
                        </div>

                        <!-- Resume/CV -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Resume/CV</label>
                            <input type="file" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800" accept=".pdf,.doc,.docx">
                            <p class="text-xs text-gray-500 mt-1">PDF or DOC (Max 5MB)</p>
                        </div>

                        <!-- Certificates -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Educational Certificates</label>
                            <input type="file" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800" accept=".pdf,.jpg,.jpeg,.png" multiple>
                            <p class="text-xs text-gray-500 mt-1">Multiple files allowed</p>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="mb-8">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Additional Information
                    </h3>
                    
                    <div class="space-y-4">
                        <!-- Skills -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Skills & Certifications</label>
                            <textarea name="skills" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="List relevant skills, certifications, or training..."></textarea>
                        </div>

                        <!-- Previous Experience -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Previous Experience (Years)</label>
                            <input name="prev_exp" type="number" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="0">
                        </div>

                        <!-- Notes -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Additional Notes</label>
                            <textarea name="additionalnotes" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200" placeholder="Any additional information..."></textarea>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="mb-8">
                    <label class="block text-gray-700 font-medium mb-2">Initial Status</label>
                    <select name="status" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800 focus:ring-2 focus:ring-amber-200">
                        <option value="active" selected>Active</option>
                        <option value="probation">On Probation</option>
                        <option value="training">In Training</option>
                    </select>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                    <button type="button" onclick="window.history.back()" class="flex-1 bg-white border-2 border-gray-300 text-gray-700 py-3 px-6 rounded-lg hover:bg-gray-50 transition font-semibold">
                        Cancel
                    </button>
                    <button type="button" onclick="saveDraft()" class="flex-1 bg-gray-100 text-gray-700 py-3 px-6 rounded-lg hover:bg-gray-200 transition font-semibold">
                        Save as Draft
                    </button>
                    <button type="submit" class="flex-1 bg-amber-800 text-white py-3 px-6 rounded-lg hover:bg-amber-900 transition font-semibold shadow-lg">
                        Add Staff Member
                    </button>
                </div>
            </form>
        </div>

        <!-- Info Card -->
        <div class="mt-6 bg-blue-50 border-l-4 border-blue-500 p-6 rounded-lg">
            <h4 class="font-bold text-blue-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Important Notes
            </h4>
            <ul class="text-blue-800 text-sm space-y-2">
                <li>• All fields marked with (*) are mandatory</li>
                <li>• Employee ID will be auto-generated upon submission</li>
                <li>• New staff members will receive login credentials via email</li>
                <li>• Documents can be uploaded later from the staff profile</li>
                <li>• Ensure all information is verified before submission</li>
            </ul>
        </div>
    </div>

    <script>
        // Profile photo preview
        document.getElementById('profilePhoto').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Auto-generate Employee ID
        function generateEmployeeId() {
            const randomNum = Math.floor(Math.random() * 9000) + 1000;
            document.getElementById('empId').value = 'EMP-' + randomNum;
        }

        // Call on page load
        generateEmployeeId();

        // Form submission
        document.getElementById('addStaffForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success message
            alert('Staff member added successfully!\n\nEmployee ID: ' + document.getElementById('empId').value + '\n\nLogin credentials have been sent to the employee\'s email address.');
            
            // In a real application, this would submit to the backend
            // window.location.href = 'staff-management.html';
        });

        // Save as draft
        function saveDraft() {
            alert('Staff information saved as draft!\n\nYou can complete the registration later from the drafts section.');
        }

        // Set maximum date for date of birth (18 years ago)
        const today = new Date();
        const maxDate = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());
        document.querySelector('input[type="date"][class*="Date of Birth"]')?.setAttribute('max', maxDate.toISOString().split('T')[0]);

        // Format Aadhaar number input
        const aadhaarInput = document.querySelector('input[maxlength="12"]');
        if (aadhaarInput) {
            aadhaarInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\s/g, '');
                if (value.length > 0) {
                    value = value.match(/.{1,4}/g).join(' ');
                }
                e.target.value = value;
            });
        }

        // PAN number validation
        const panInput = document.querySelector('input[maxlength="10"]');
        if (panInput) {
            panInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.toUpperCase();
            });
        }

        // Phone number validation
        const phoneInputs = document.querySelectorAll('input[type="tel"]');
        phoneInputs.forEach(input => {
            input.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 10) {
                    value = value.slice(0, 10);
                }
                e.target.value = value;
            });
        });